<%- layout("template2")%>
<div class="container">
    <div>
        <h2>Products on <%= products[0].category.name%> Category</h2>
    </div>
    <div class="row">
      <% for(var i=0;i<products.length;i++){ %>
      <div class="col-md-4">
        <a href="/product/<%=products[i]._id%>">
            <div class="thumbnail">
                <img src="<%=products[i].image%>"/>
                <div class="caption">
                    <h3><%=products[i].name%></h3>
                    <p><%=products[i].category.name%></p>
                    <p>N<%=products[i].price%></p>
                </div>
            </div>
        </a>

       </div>
       <%}%>
    </div>
   </div>